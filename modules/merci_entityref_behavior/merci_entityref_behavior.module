<?php

/**
 *  * Implements hook_entity_bundle_field_info_alter().
 */
function merci_entityref_behavior_entity_bundle_field_info_alter(&$fields, \Drupal\Core\Entity\EntityTypeInterface $entity_type, $bundle) {
  if ($entity_type->id() == 'node'  && !empty($fields['merci_reservation_items'])) {
    $fields['merci_reservation_items']->addConstraint('ReservationConflict', []);
  }
}
