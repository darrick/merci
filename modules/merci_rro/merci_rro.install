/**
 * Implementation of hook_install().
 */
 
function merci_rro_install() {

  drupal_install_schema('merci_rro');

} // merci_rro_install

/**
 * Implementation of hook_uninstall().
 */

function merci_rro_uninstall() {

  drupal_uninstall_schema('merci_rro');
  
} // merci_rro_uninstall

