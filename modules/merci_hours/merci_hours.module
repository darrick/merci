define('MERCI_HOURS_FIELD', 'field_merci_hours');
define('MERCI_HOURS', 'merci_hours');
define('MERCI_HOLIDAYS_FIELD', 'field_merci_holidays');

function merci_hours_merci_settings_form_alter(&$form, &$form_state) {
  $preset = $form_state['item'];
  $settings = $preset->settings;
  $fields_info = field_info_instances();

  // Allow the uesr to select the name of the entityreference attached to a reservatble item.
  $reference_fields = array('disabled' => t('Disabled'));

  foreach ($fields_info as $type => $bundles) {
    foreach ($bundles as $name => $bundle) {
      foreach ($bundle as $field_name => $field_info) {
        $more_info = field_info_field($field_name);
        if ( $more_info['type'] == 'office_hours') {
          $reference_fields[$field_name] = $name . ":" . $field_name;
        }
      }
    }
  }

  $form['settings']['merci_hours_field'] = array(
    '#type' => 'select',
    '#title' => t('Office hours field'),
    '#options' => $reference_fields,
    '#default_value' => array_key_exists('merci_hours_field', $settings) ? $settings['merci_hours_field'] : NULL,
    '#description' => t('Select the entityreference field containing bucket items.'),
  );
}
/**
